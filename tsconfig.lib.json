// build types.
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": [
        "./packages/*"
      ]
    },
  },
  "include": [
    "./packages",
    "./typings.d.ts"
  ],
  "exclude": [
    "**/__tests__"
  ]
}
